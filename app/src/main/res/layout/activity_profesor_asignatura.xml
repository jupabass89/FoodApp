<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profesor_asignatura"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/oscuro"
    tools:context="com.example.juan.foodapp.controlador.ProfesorAsignaturaActivity">

    <EditText
        android:id="@+id/profesor"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/asignatura"
        android:layout_alignStart="@+id/asignatura"
        android:layout_below="@+id/asignatura"
        android:layout_marginTop="14dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:id="@+id/asignatura"
        android:textColor="@color/white"
        android:textAlignment="center"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_marginRight="74dp"
        android:layout_marginEnd="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/main.btnLogin.hint"
        style="@style/Widget.AppCompat.Button"
        android:text="Continuar"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/profesor"
        android:layout_alignLeft="@+id/profesor"
        android:layout_alignStart="@+id/profesor" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignatura:" android:textColor="@color/white"
        android:layout_alignBaseline="@+id/asignatura"
        android:layout_alignBottom="@+id/asignatura"
        android:layout_toLeftOf="@+id/asignatura"
        android:layout_toStartOf="@+id/asignatura" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profesor:" android:textColor="@color/white"
        android:layout_alignBaseline="@+id/profesor"
        android:layout_alignBottom="@+id/profesor"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

</RelativeLayout>
