<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profesor_asignatura"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/oscuro"
    tools:context="com.example.juan.foodapp.controlador.ProfesorAsignaturaActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profesor"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:hint="Profesor"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_below="@+id/asignatura"
        android:layout_alignLeft="@+id/asignatura"
        android:layout_alignStart="@+id/asignatura"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/asignatura"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:hint="Asignatura"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/main.btnLogin.hint"
        style="@style/Widget.AppCompat.Button"
        android:text="Continuar"
        android:layout_below="@+id/profesor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

</RelativeLayout>
