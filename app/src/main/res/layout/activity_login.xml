<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondologin1"
    tools:context="com.example.juan.foodapp.controlador.LoginActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:layout_alignBaseline="@+id/asignatura"
        android:layout_alignBottom="@+id/asignatura"
        android:layout_toLeftOf="@+id/asignatura"
        android:layout_toStartOf="@+id/asignatura"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <EditText
        android:id="@+id/asignatura"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userMail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHighlight="@android:color/holo_orange_light"
        android:textColorLink="@android:color/holo_orange_light" />

    <EditText
        android:id="@+id/profesor"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/asignatura"
        android:layout_alignStart="@+id/asignatura"
        android:layout_alignTop="@+id/asignatura"
        android:layout_marginTop="56dp"
        android:ems="8"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/userMail"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogin"
        android:layout_alignLeft="@+id/profesor"
        android:layout_alignStart="@+id/profesor"
        android:layout_marginBottom="11dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/main.btnLogin.hint"
        style="@style/Widget.AppCompat.Button"
        android:text="Ingresar"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:layout_alignBaseline="@+id/userMail"
        android:layout_alignBottom="@+id/userMail"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id:"
        android:layout_alignBaseline="@+id/profesor"
        android:layout_alignBottom="@+id/profesor"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

</RelativeLayout>
