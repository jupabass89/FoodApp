<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondologin1"
    tools:context="com.example.juan.foodapp.controlador.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginBottom="66dp"
        android:id="@+id/userName"
        android:textColor="@color/white"
        android:layout_above="@+id/userMail"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:hint="Nombre"
        style="@android:style/Widget.DeviceDefault.EditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="56dp"
        android:id="@+id/userId"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/userName"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName"
        android:textAlignment="center"
        android:hint="ID"
        style="@android:style/Widget.DeviceDefault.EditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userMail"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:hint="Correo electrÃ³nico"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_above="@+id/btnLogin"
        android:layout_alignLeft="@+id/userId"
        android:layout_alignStart="@+id/userId" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/main.btnLogin.hint"
        style="@style/Widget.AppCompat.Button"
        android:text="Ingresar"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
